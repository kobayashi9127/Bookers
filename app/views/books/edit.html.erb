<% if @book.errors.any? %>
  <%= @book.errors.count %>件の error が発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>

<p>Title</p>
  <%= f.text_field :title %>
<p>Body</p>
  <%= f.text_area :body %>
<p>
  <%= f.submit 'Update Book' %>
</p>
<% end %>

<td><%= link_to 'Show', book_path(@book) %></td>
<td><%= link_to 'Back', books_path %></td>
